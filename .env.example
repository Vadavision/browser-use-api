# API Configuration
PORT=8000
HOST=0.0.0.0

# OpenAI API Key (required for LLM functionality)
OPENAI_API_KEY=your_openai_api_key_here

# Redis Configuration (optional, for state persistence)
# Option 1: Use REDIS_URL (legacy format)
# REDIS_URL=redis://localhost:6379

# Option 2: Use separate host and port (new format)
REDIS_HOST=localhost
REDIS_PORT=6379

# Logging
LOG_LEVEL=INFO

# Browser Configuration
HEADLESS=true
BROWSER_TIMEOUT=60000  # Browser operation timeout in milliseconds

# Security
ALLOW_ORIGINS=*  # Comma-separated list of allowed origins for CORS

# AWS S3 Configuration (for screenshot storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-screenshot-bucket
S3_PREFIX=screenshots  # Folder prefix within the bucket
